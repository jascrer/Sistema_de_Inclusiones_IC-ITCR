<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.itcr.inclutec"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.itcr.inclutec.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itcr.inclutec.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.itcr.inclutec.InicioActivity"
            android:label="@string/title_activity_inicio" >
        </activity>
        <activity
            android:name="com.itcr.inclutec.ModifyActivity"
            android:label="@string/title_activity_modify" >
        </activity>
        <activity
            android:name="com.itcr.inclutec.FormularioDPActivity"
            android:label="@string/title_activity_formulario"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.itcr.inclutec.DetalleActivity"
            android:label="@string/title_activity_detalle" >
        </activity>
        <activity
            android:name="com.itcr.inclutec.Detalle2Activity"
            android:label="@string/title_activity_detalle2" >
        </activity>
        <activity
            android:name="com.itcr.inclutec.FormularioCursosActivity"
            android:label="@string/title_activity_formulario_cursos"
            android:parentActivityName="com.itcr.inclutec.FormularioDPActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.itcr.inclutec.FormularioDPActivity" />
        </activity>
        <activity
            android:name="com.itcr.inclutec.FormularioRestriccionesActivity"
            android:label="@string/title_activity_formulario_restricciones"
            android:parentActivityName="com.itcr.inclutec.FormularioCursosActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.itcr.inclutec.FormularioCursosActivity" />
        </activity>
    </application>

</manifest>
